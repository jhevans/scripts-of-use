
  if [ "$pnc" = "" ]; then
    if [ "$output_all" = "true" ]; then
      echo "â­ Skipping $first_name $surname as pnc is blank"
    fi
    continue
  fi

  if [ "$debug" = "true" ]; then
    echo "ğŸŒ€ Searching for $first_name $surname"
  fi

  SEARCH_PAYLOAD=$(sed "s/FIRST_NAME/$first_name/g" "$SEARCH_TEMPLATE_PATH" | sed "s/SURNAME/$surname/g" | sed "s,PNC,$pnc,g")

  if [ "$debug" = "true" ]; then
    echo "ğŸ› Payload: $SEARCH_PAYLOAD"
    echo "âœ¨ Performing offender search..."
  fi

  response=$(curl -s -X POST $url \
  -H 'Content-Type: application/json' \
  -H "Authorization: Bearer $token" \
  -d "$SEARCH_PAYLOAD")


  if [ "$debug" = "true" ]; then
    echo "ğŸ› Response: $response"
  fi
  count=$(echo $response | grep -o -i $pnc | wc -l)
  matched_by=$(echo $response | jq '.matchedBy')

  if [ $count -eq 0 ] || [ "$output_all" = "true" ]; then
    echo "ğŸ§® PNC $pnc was found $count times in the response for $first_name $surname matched by $matched_by"
  fi
